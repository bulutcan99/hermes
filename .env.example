# Discord Clone Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgres://discord:discord_dev_password@localhost:5432/discord

# Redis Configuration
REDIS_URL=redis://:redis_dev_password@localhost:6379

# NATS Configuration
NATS_URL=nats://localhost:4222

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=discord_minio
MINIO_SECRET_KEY=discord_minio_password
MINIO_BUCKET=discord-uploads

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_ACCESS_EXPIRY=3600
JWT_REFRESH_EXPIRY=604800

# TURN/STUN Server
TURN_URL=turn:localhost:3478
TURN_USERNAME=discord
TURN_PASSWORD=discord_turn_password
STUN_URL=stun:localhost:3478

# Service Ports
AUTH_SERVICE_PORT=8081
USER_SERVICE_PORT=8082
CHANNEL_SERVICE_PORT=8083
CHAT_SERVICE_PORT=8084
VOICE_SERVICE_PORT=8085
STREAM_SERVICE_PORT=8086
PRESENCE_SERVICE_PORT=8087
GATEWAY_SERVICE_PORT=8080
MEDIA_SERVER_PORT=8089

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://localhost:8081
USER_SERVICE_URL=http://localhost:8082
CHANNEL_SERVICE_URL=http://localhost:8083
CHAT_SERVICE_URL=http://localhost:8084
VOICE_SERVICE_URL=http://localhost:8085
STREAM_SERVICE_URL=http://localhost:8086
PRESENCE_SERVICE_URL=http://localhost:8087
MEDIA_SERVER_URL=http://localhost:8089

# WebRTC Configuration
RTC_MIN_PORT=50000
RTC_MAX_PORT=60000

# Rate Limiting
RATE_LIMIT_MESSAGES=10
RATE_LIMIT_WINDOW=10

# Media Server Configuration
MAX_SESSIONS=1000
ENABLE_RECORDING=false
RECORDING_STORAGE=minio://localhost:9000

# Presence Service
HEARTBEAT_INTERVAL=30
HEARTBEAT_TIMEOUT=45
TYPING_TIMEOUT=10

# Stream Service
MAX_STREAMS_PER_CHANNEL=5
MAX_VIEWERS_PER_STREAM=50

# Logging
RUST_LOG=info
RUST_BACKTRACE=1

# Production Settings (uncomment and configure for production)
# TLS_CERT_PATH=/path/to/cert.pem
# TLS_KEY_PATH=/path/to/key.pem
# CORS_ORIGIN=https://yourdomain.com
# SENTRY_DSN=https://your-sentry-dsn
